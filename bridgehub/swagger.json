{
  "swagger": "2.0",
  "info": {
    "description": "A server to expose the bridge-style library",
    "version": "1.0.0",
    "title": "Bridge-style server",
    "contact": {
      "email": "info@geocat.net"
    },
    "license": {
      "name": "MIT License",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:8080",
  "basePath": "/",
  "tags": [
    {
      "name": "convert"
    }
  ],
  "schemes": [
    "https",
    "http"
  ],
  "paths": {
    "/info": {
      "get": {
        "summary": "Returns server information",
        "tags": [
          "info"
        ],
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "$ref": "#/definitions/Info"
            }
          }
        },
        "produces": [
          "application/json"
        ]
      }
    },
    "/convert/{tofrom}/{styleformat}": {
      "post": {
        "tags": [
          "convert"
        ],
        "summary": "Converts a Geostyler style",
        "description": "",
        "operationId": "to",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "The style",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Style"
            }
          },
          {
            "name": "styleformat",
            "in": "path",
            "required": true,
            "type": "string",
            "enum": [
              "mapbox",
              "sld",
              "mapserver"
            ]
          },          
          {
            "name": "tofrom",
            "in": "path",
            "required": true,
            "type": "string",
            "enum": [
              "to",
              "from"
            ]
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "$ref": "#/definitions/ResponseStyle"
            }
          },
          "404": {
            "description": "Unknown format or operation requested",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "400": {
            "description": "Invalid input",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "500": {
            "description": "Problem during conversion",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }   
  },
  "definitions": {
    "Info": {
      "type": "object",
      "properties": {
        "formats": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "Style": {
      "type": "object",
      "properties": {
        "style": {
          "type": "string"
        }
      }
    },
    "ResponseStyle": {
      "type": "object",
      "properties": {
        "style": {
          "type": "object"          
        },
        "warnings": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "Error": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    }
  }
}